{
  "name": "playwright-bdd-example",
  "version": "0.1.0",
  "scripts": {
    "test22": "npx playwright test",
    "testbdd": "npx bddgen && npx playwright test",
    "bddgen": "npx bddgen",
    "clean:reports": "rimraf allure-report allure-results && mkdirp allure-report allure-results",
    "generate:reports": "npx allure generate ./allure-results --clean",
    "open:reports": "npx allure open ./allure-report",
    "pretest": "npm run clean:reports",
    "clean:generateReport": "",
    "posttest": "npm run generate:reports && npm run open:reports",
    "execute:script": "npx playwright test",
    "test": "npm run execute:script || npm run posttest",
    "watch:bdd": "nodemon -w ./features -w ./steps -e feature,js,ts --exec 'npx bddgen'",
    "watch:pw": "playwright test --ui",
    "watch": "run-p watch:*",
    "smoke": "npx bddgen && npx playwright test --grep @Smoke",
    "checkGrades": "npx bddgen && npx playwright test --grep @CheckGrades",
    "addcourses": "npx bddgen && npx playwright test --grep @AddCourses || npm run clean:reports",
    "Setup": "npx bddgen && npx playwright test --grep @Setup",
    "regression": "npx bddgen && npx playwright test --grep @Regression || npm run clean:reports"
  },
  "devDependencies": {
    "@cucumber/html-formatter": "21.3.0",
    "@cucumber/messages": "^24.0.0",
    "@cucumber/pretty-formatter": "1.0.0",
    "@playwright/test": "^1.42.1",
    "@types/expect": "24.3.0",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "^29.5.12",
    "@types/lodash": "4.17.0",
    "@types/node": "^20.12.2",
    "@types/pixelmatch": "5.2.6",
    "@types/pngjs": "6.0.4",
    "allure-playwright": "^2.15.1",
    "cucumber-console-formatter": "1.0.0",
    "cucumber-html-reporter": "7.1.1",
    "dotenv": "^16.4.5",
    "fs-extra": "11.2.0",
    "mkdirp": "^3.0.1",
    "multiple-cucumber-html-reporter": "^3.6.2",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "open": "10.1.0",
    "pixelmatch": "5.3.0",
    "playwright-bdd": "^6.2.0",
    "pngjs": "7.0.0",
    "prettier": "3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  }
}
