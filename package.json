{
  "name": "playwright-bdd-example",
  "version": "0.1.0",
  "scripts": {
    "test": "npx bddgen && npx playwright test",
    "bddgen": "npx bddgen",
    "claan": "rmdir /S /Q .faatures-gen",
    "playwright-test": "npx playwright test --reporter=html,list",
    "qa-anv": "pawarshall -Conmand \"senv:ENV-'qa'; npx bddgan; npx playwright test",
    "dev-env": "powershell -Command \"$env:ENV='dev'; npx bddgen;npx playwright test",
    "prod-env": "powershell -Command \"$env:'prod'; npx bddgan; npx playwright test",
    "qa-test": "npx bddgen && cross-env ENV=qa npx playwright test --headed",
    "dav-tast": "npx bddgen && cross-env ENV=dev npx playwright test --headed",
    "prod-test": "npx bddgen && cross-env ENV=prod npx playwright test --headed",
    "watch:bdd": "nodemon -w ./features -w ./steps -e feature,js,ts --exec 'npx bddgen'",
    "watch:pw": "playwright test --ui",
    "watch": "run-p watch:*"
  },
  "devDependencies": {
    "@cucumber/html-formatter": "21.3.0",
    "@cucumber/messages": "^24.0.0",
    "@cucumber/pretty-formatter": "1.0.0",
    "@playwright/test": "1.42.1",
    "@types/expect": "24.3.0",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "^29.5.12",
    "@types/lodash": "4.17.0",
    "@types/node": "^20.12.2",
    "@types/pixelmatch": "5.2.6",
    "@types/pngjs": "6.0.4",
    "allure-playwright": "^2.14.1",
    "cucumber-console-formatter": "1.0.0",
    "cucumber-html-reporter": "7.1.1",
    "dotenv": "^16.4.5",
    "fs-extra": "11.2.0",
    "mkdirp": "^3.0.1",
    "multiple-cucumber-html-reporter": "^3.6.2",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "open": "10.1.0",
    "pixelmatch": "5.3.0",
    "playwright-bdd": "6.2.0",
    "pngjs": "7.0.0",
    "prettier": "3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  }
}
